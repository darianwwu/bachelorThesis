extends layout

block content
  h1 Semi-automatische Erkennung manipulierter Satellitenbilder in sozialen Medien durch Vergleich mit Referenzdaten
  p Input: Satellitenbild, Referenzdaten Output: Manipulationserkennung
  .row
    .row
      .col-md-6
        .image-container
          input#locationInputLat(type='text' placeholder='Location Lat')
          input#locationInputLon(type='text' placeholder='Location Lon')
          button#locationInputApply Best√§tigen
          input#imageUpload(type='file' accept='image/*')
          img#previewImage(src='#' alt='Preview Image' style='width: 100%;')
          button#uebereinanderlegenButton Bild auf Karte legen
          input#transparenzRegler(type='range' min='0' max='100' value='50')
          button#textInputApply Text NLP
          button#kartenCoordsApply Kartenkoordinaten nutzen
          img#my-img(alt='Preview Image' style='width: 100%;')
          input#linkInput(type='text' placeholder='Link')

      .col-md-6(style='position: relative;')
        .map-container(style = 'position: relative; z-index: 1;')
          #map(style='width: 100%; height: 700px;')
        .overlay-container(style = 'position: absolute; z-index: 3; top: 0; left: 0; pointer-events: none;')  
          img#transparentesOverlay(style='width: 100%; height: 700px; opacity: 0.5; display: none;')
